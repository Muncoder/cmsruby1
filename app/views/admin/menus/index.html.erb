<div class="container">
	<h1>Menus</h1>
	<hr>
	<% @menus.each do |menu| %>
		<ul>
			<li>
				<%= menu.name %> -
				<%= link_to "edit", edit_admin_menu_path(menu), class: "btn btn-primary btn-xs" %>
				<%= link_to "delete", admin_menu_path(menu), method: :delete, data: {confirm: "Sure to Delete?"}, class: "btn btn-primary btn-xs" %>

				<ul>
					<% menu.menu_items.each do |item| %>
						<li> <%= link_to item.title, url_for_menu_item(item) %> </li>
					<% end %>
				</ul>
			</li>
		</ul>
	<% end %>

	<hr>

	<%= link_to "New Menu", new_admin_menu_path, class: "btn btn-primary" %>
</div>