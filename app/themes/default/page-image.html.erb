<div class="container">
	<blockquote>
		This referes to page with id 1
	</blockquote>

	<div class="well">
		<h1><%= @page.title %></h1>
		<hr>
		<p>
			<%= simple_format @page.body %>
		</p>

		<p>
			<%= image_tag @page.url, title: @page.caption  %>
		</p>
		
		<p>
			<% @page.fields.each do |field| %>
				<ul>
					<li><%= field.field_definition.key %></li>
					<li><%= field.value %></li>
				</ul>
			<% end %>
		</p>

		<p>
			<%= @page.slug %>
		</p>
	</div>

	<%= link_to "Back", admin_pages_path, class: "btn btn-default" %>	

</div>